#include<stdio.h>
/* Code to print -->  
            1
           121
          12321
         1234321
        123454321 */
        
int main(){
	int i,j,k,l;
	for(i=1;i<=5;i++)
	{
		printf("\t");
		for(k=4;k>=i;k--)
		{
			printf(" ");
		}
		
		for(j=1;j<=i;j++)
		{
			printf("%d",j);
		}
		
		for(l=i-1;l>0;l--)
		{
			printf("%d",l);
		}
		
    printf("\n");
	}
return 0;  
}
